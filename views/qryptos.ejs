<!DOCTYPE html>
<html lang="en">

<head>
  <% include ./partials/head %>
</head>

<body ng-app="app">
  <% include ./partials/nav %>
    <div class="container">
      <div ng-controller="orderController">
        <div class="alert alert-danger alert-dismissible" role="alert" ng-show="show">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <strong ng-text="message"></strong>
        </div>
        <h1>Qryptos Order</h1>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Symbol</th>
              <th>ID</th>
              <th>Side</th>
              <th>Price</th>
              <th>Filled Quantity</th>
              <th>Updated</th>
              <th>Status</th>
              <th>Cancel Order</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="order in orders">
              <td>{{order.currency_pair_code}}</td>
              <td>{{order.id}}</td>
              <td ng-class="order.side == 'buy' ? 'success' : 'danger'">{{order.side}}</td>
              <td>{{order.price}}</td>
              <td>{{order.filled_quantity}}</td>
              <td>{{order.updated_at * 1000 | date:'yyyy-MM-dd HH:mm:ss'}}</td>
              <td>{{order.status}}</td>
              <td>
                <button class="btn btn-primary" type="button" ng-click="cancelOrder('qryptos', $index)">Cancel</button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <% include ./partials/script %>
      <script type="text/javascript" src="/javascripts/qryptos.js"></script>
</body>

</html>
